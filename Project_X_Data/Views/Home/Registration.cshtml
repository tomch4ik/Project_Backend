@* Views/Shared/_Registration.cshtml *@
@model Project_X_Data.Models.LogInOut.RegistrationViewModel

<div class="container mt-5 mb-5">
    <div class="position-relative">
        <img src="~/Form_img/Logo.png" alt="Logo" style="width: 96px; height: 96px; position: absolute; top: 0; left: 0; z-index: 10;" />
    </div>

    <div class="card shadow p-4 mx-auto" style="max-width: 512px;">
        <h2 class="text-center mb-4">Welcome to your<br><span class="fw-bold text-primary">professional community</span></h2>

        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="mb-3 position-relative">
                <label for="email" class="form-label">Email or phone number</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <img src="~/Form_img/EnvelopeSimple.png" alt="email icon" style="width: 20px;">
                    </span>
                    <input type="text" class="form-control border-start-0" id="email" name="Email" placeholder="Email or phone number" value="@Model?.Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger small position-absolute"></span>
            </div>

            <div class="mb-3 position-relative">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <img src="~/Form_img/LockKey.png" alt="lock icon" style="width: 20px;">
                    </span>
                    <input type="password" class="form-control border-start-0" id="password" name="Password" placeholder="Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small position-absolute"></span>
            </div>

            <div class="mb-3 position-relative">
                <label for="confirmPassword" class="form-label">Confirm password</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <img src="~/Form_img/LockKey.png" alt="lock icon" style="width: 20px;">
                    </span>
                    <input type="password" class="form-control border-start-0" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small position-absolute"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Sign Up</button>

            <p class="text-center small mt-3">
                By Signing Up, you agree to our
                <a href="#">Terms of Service</a> and
                <a href="#">Privacy Policy</a>
            </p>

            <div class="text-center my-3 position-relative">
                <hr>
                <span class="position-absolute top-50 start-50 translate-middle bg-white px-2">or</span>
            </div>

            <button type="button" class="btn btn-outline-primary w-100 mb-2 d-flex align-items-center justify-content-center gap-2">
                Continue with Google
            </button>

            <a href="/Home/Login" class="btn btn-outline-secondary w-100">Sign In</a>
        </form>
    </div>
</div>